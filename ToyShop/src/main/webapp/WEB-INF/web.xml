<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <!--            CONTEXT PARAMETERS              -->
    <context-param>
        <param-name>savingMode</param-name>
        <param-value>session</param-value>
    </context-param>
  <context-param>
        <param-name>avaDir</param-name>
        <param-value>D:/avatar</param-value>
    </context-param>

    <!--                FILTERS                   -->
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>com.epam.preprod.kopaniev.filter.AccessFilter</filter-class>
        <init-param>
            <param-name>pathToAccessConfig</param-name>
            <param-value>D:\Влад\Epam\Pre-prod\git\ToyShop\src\main\webapp\WEB-INF\access.xml</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!--    ==================================================================================================     -->

    <filter>
        <filter-name>LocalesFilter</filter-name>
        <filter-class>com.epam.preprod.kopaniev.filter.LocalesFilter</filter-class>
        <init-param>
            <param-name>available-locales</param-name>
            <param-value>en ru</param-value>
        </init-param>
        <init-param>
            <param-name>default-locale</param-name>
            <param-value>en</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>LocalesFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>index.jsp</url-pattern>
    </filter-mapping>

    <!--    ==================================================================================================     -->

    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>com.epam.preprod.kopaniev.filter.NoCacheFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--    ==================================================================================================     -->

    <filter>
        <filter-name>GZipFilter</filter-name>
        <filter-class>com.epam.preprod.kopaniev.filter.GZipFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>GZipFilter</filter-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GZipFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.html</url-pattern>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!--                LISTENERS                   -->
    <listener>
        <listener-class>com.epam.preprod.kopaniev.listener.ContextListenerImpl</listener-class>
    </listener>

    <!--            DATA SOURCE REFERENCES           -->
    <resource-ref>
        <res-ref-name>jdbc/toys_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
